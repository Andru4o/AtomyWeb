{
  "name": "atomy-web",
  "version": "1.0.0",
  "scripts": {
    "clean": "rimraf wwwroot/css/* wwwroot/js/*",
    "build:css": "postcss src/styles/*.css --dir wwwroot/css",
    "build:js": "webpack --config webpack.config.js",
    "build": "npm run clean && npm run build:css && npm run build:js",
    "watch": "npm-run-all --parallel watch:css watch:js",
    "watch:css": "postcss src/styles/*.css --dir wwwroot/css --watch",
    "watch:js": "webpack --config webpack.config.js --watch"
  },
  "devDependencies": {
    "postcss": "^8.0.0",
    "webpack": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  }
}
